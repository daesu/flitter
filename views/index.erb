<div id="listing" >

	<% if @update.nil? %>
	<h4> No flitts to display </h4>
	<% else %>
	<h4> Viewing all Latest Flitts! </h4>
	<hr>
	<% @update.each do |update| %>  
	<% ago = (Time.now.utc.- update.created_at).round / 60 %>
		<article>
			<p>Posted by:  <a href= <%= '/flitter/user/' + update.user_id %>><%= update.user_id %></a></p>
			<div id="content" style="padding: 5px;float:left;">
			<%= update.content %>
			</div>
			<br><br>
			<% if ago < 60 %>
			<p><small>Created <%= ago %> minutes ago</small></p>  
			<% elsif ago >= 60  %>
			<p><small>Created <%= ago / 60 %> hours ago</small></p>
			<% end %> 
			<hr> 
		</article>
	<br> 
	<% end %>   


<div class="digg_pagination">
    <div class="page_info">
      <%= page_entries_info @update %>
    </div>
    <%= will_paginate @update, :container => false %>
<% end %>
  </div>

</div>

